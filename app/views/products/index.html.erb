<html>
<HEAD>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
.btn {
    background-color: DodgerBlue;
    border: none;
    color: white;
    padding: 12px 16px;
    font-size: 16px;
    cursor: pointer;
}

/* Darker background on mouse-over */
.btn:hover {
    background-color: Red;
}
</style>
  </HEAD>
<p id="notice"><%= notice %></p>
<h1>Products</h1>
<%= button_to 'New Product', new_product_path, method: :get %>

<table class="table">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Category name</th>
      <th>Product price</th>
      <th>Product description</th>
      <th>Quantity</th>
      <th>Edit</th>
      <th>Show</th>
      <th>Operations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.category.category_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_description %></td>
        <td><%= product.quantity %></td>
        <td><%= button_to 'Edit', edit_product_path(product.id), method: :get %></td>
        <td><%= button_to 'Show', product_path(product.id), method: :get %></td>
        <!-- <td>< %= button_to 'Delete', product_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        
        <td><button class="btn"> <i class="fa fa-trash"></i><a href"<%= product_path(product)%>"></a></button>
        </td>

        <!-- < % button_to("Delete", product_path(product), method: :delete, :class => "fa fa-trash") %>  -->

<!-- < %= button_to 'Delete', product_path(product),method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash"  %> -->
