<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Category name</th>
      <th>Product price</th>
      <th>Product description</th>
      <th>Quantity</th>
      <th>Edit</th>
      <th>Show</th>
      <th>Delete</th>
      <th> image </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.category.category_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_description %></td>
        <td><%= product.quantity %></td>
        <td><%= button_to 'Edit', edit_product_path(product.id), method: :get %></td>
        <td><%= button_to 'Show', product_path(product.id), method: :get %></td>
        <td><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Image',  new_product_productimg_path(product.id), method: :get %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Product', new_product_path, method: :get %>
